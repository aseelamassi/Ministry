<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_construction_no"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/numberfacility"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ed_construction_no"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_official_business_name" />


            <TextView
                android:id="@+id/tv_official_business_name"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/official_business_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ed_tv_official_business_name"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_official_business_name" />


            <TextView
                android:id="@+id/tv_trade_business_name"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/trade_business_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ed_tv_trade_business_name"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_trade_business_name" />


            <TextView
                android:id="@+id/tv_owner_sn"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/owner_sn" />

            <TextView
                android:id="@+id/ed_owner_sn"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray" />


            <TextView
                android:id="@+id/tv_owner_name"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/owner_name" />

            <TextView
                android:id="@+id/ed_owner_name"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray" />


            <TextView
                android:id="@+id/tv_scientific_qualification"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/scientific_qualification" />

            <TextView
                android:id="@+id/ed_scientific_qualification"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_job"
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/job" />

                    <TextView
                        android:id="@+id/ed_job"
                        style="@style/datePickerStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_search"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_skill_level"
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/skill_level" />

                    <TextView
                        android:id="@+id/ed_skill_level"
                        style="@style/datePickerStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"

                        />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_per_exam"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/per_exam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rg_per_exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_inspector_recommendation">


            </RadioGroup>

            <TextView
                android:id="@+id/tv_prim_exam"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/per_exam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rg_prim_exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_inspector_recommendation">

            </RadioGroup>


            <TextView
                android:id="@+id/tv_have_certificate"
                style="@style/txtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/have_certificate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rg_have_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_inspector_recommendation">

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_date_visit"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/date_visit" />

                    <TextView
                        android:id="@+id/ed_date_visit"
                        style="@style/datePickerStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"

                        android:backgroundTint="@color/dark_gray"
                        app:drawableEndCompat="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/tv_work_status_desc"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/describe_practical_status" />

                    <TextView
                        android:id="@+id/ed_work_status_desc"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"

                        />


                    <TextView
                        android:id="@+id/tv_start_work_date"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/date_beginning_work" />

                    <TextView
                        android:id="@+id/ed_start_work_date"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:drawableEnd="@drawable/ic_calendar"

                        />


                    <TextView
                        android:id="@+id/tv_leave_date"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/leave_date" />

                    <TextView
                        android:id="@+id/ed_leave_date"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:drawableEnd="@drawable/ic_calendar"

                        />

                    <TextView
                        android:id="@+id/tv_salary"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/wage" />

                    <EditText
                        android:id="@+id/ed_salary"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:inputType="number"

                        />

                    <TextView
                        android:id="@+id/tv_payment_type"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/payment_type" />

                    <TextView
                        android:id="@+id/ed_payment_type"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"

                        />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_work_status"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/practical_status" />

                    <TextView
                        android:id="@+id/ed_work_status"
                        style="@style/datePickerStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"

                        app:drawableEndCompat="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/tv_work_status_desc_desc"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/describe_describe_practical_status" />

                    <TextView
                        android:id="@+id/ed_work_status_desc_desc"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"

                        />


                    <TextView
                        android:id="@+id/tv_end_work_date"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/date_ending_work" />

                    <TextView
                        android:id="@+id/ed_end_work_date"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:drawableEnd="@drawable/ic_calendar"

                        />


                    <TextView
                        android:id="@+id/tv_leave_work_reason"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/leaving_reason" />

                    <EditText
                        android:id="@+id/ed_leave_work_reason"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:inputType="text"

                        />

                    <TextView
                        android:id="@+id/tv_currency_type"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/currency_type" />

                    <TextView
                        android:id="@+id/ed_currency_type"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"

                        />

                    <TextView
                        android:id="@+id/tv_type_of_contract"
                        style="@style/txtStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/type_of_contract" />

                    <TextView
                        android:id="@+id/ed_contract_type"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="8dp"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"

                        />





                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>