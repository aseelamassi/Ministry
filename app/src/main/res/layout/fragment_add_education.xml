<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:paddingBottom="70dp"
        android:textDirection="rtl"
        >


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/kind_of_education" />

            <TextView
                android:id="@+id/et_education_type_educatinalStatus"
                style="@style/editTxtStyle"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                android:layout_width="match_parent"
                android:focusable="false"
               />

            <TextView
                android:id="@+id/tv_qulification"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/qualification" />

            <TextView
                android:id="@+id/et_qualification"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                />



            <TextView
                android:id="@+id/tv_educational_institution"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/educational_institution" />

            <TextView
                android:id="@+id/et_educational_institution"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
               />

            <TextView
                android:id="@+id/tv_education_department"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/department" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_education_department"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                android:focusable="false"
                android:inputType="text" />



            <TextView
                android:id="@+id/tv_avg"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="visible"
                android:text="@string/avg" />

            <EditText
                android:id="@+id/et_avg"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_graduation_year_edu"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:text="@string/graduation_year" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_graduation_year_edu"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_edu_status"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/educational_status" />

            <TextView
                android:id="@+id/et_education_status_educatinalStatus"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:focusable="false"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"

                 />

            <TextView
                android:id="@+id/tv_qualification_detail"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/qualification_detail" />

            <TextView
                android:id="@+id/et_qualification_detail"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:focusable="false"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                 />



            <TextView
                android:id="@+id/tv_education_specialization"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/specialization" />

            <TextView
                android:id="@+id/et_education_specialization"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                android:focusable="false"
                />
            <TextView
                android:id="@+id/tv_trainning_program_edu"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/acadmic_programs" />

            <TextView
                android:id="@+id/et_training_program_edu"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                android:focusable="false"
                android:visibility="visible"
                />




            <TextView
                android:id="@+id/tv_rating"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/rating"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_rating"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:focusable="false"
                android:inputType="text"
                android:visibility="visible"
                />


            <TextView
                android:id="@+id/tv_graduation_country_edu"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:text="@string/graduation_country" />

            <TextView
                android:id="@+id/et_graduation_country_edu"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                android:focusable="false"
                android:visibility="gone"
                android:inputType="text" />

        </LinearLayout>



    </LinearLayout>

        <TextView
            android:id="@+id/tv_practicing_certificate"
            style="@style/txtStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/practicing_certificate"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/et_practicing_certificate"
            style="@style/editTxtStyle"
            android:layout_width="match_parent"
            android:focusable="false"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
            android:visibility="gone"
            />


    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:visibility="gone"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/txtStyle"
                android:id="@+id/tv_certificate_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/certificate_no" />

            <EditText
                android:id="@+id/et_certificate_no"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/txtStyle"
                android:id="@+id/tv_certificate_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/certificate_year" />

            <TextView
                android:id="@+id/et_certificate_year"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                 />
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_new_education_add_education"
        style="@style/btnStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:text="@string/Save" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>