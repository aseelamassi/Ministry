<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_searsh_move_facility_sh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
android:visibility="gone"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_view"
            style="@style/txtStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttom_sheet_shape"

            android:padding="8dp"
            android:text="@string/numberfacility"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_edit_defrent_coloer"
            app:layout_constraintBottom_toBottomOf="@id/tv_view"
            app:layout_constraintEnd_toEndOf="@id/tv_view"
            app:layout_constraintTop_toTopOf="@id/tv_view" />

            <LinearLayout
                android:layout_width="0dp"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_view"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_owner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/owner_name"
                        android:drawableStart="@drawable/ic_suqare"
                        android:textSize="13sp"
                        android:drawablePadding="8dp"
                         />



                    <TextView
                        android:id="@+id/tv_owner_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/owner_id"
                        android:drawableStart="@drawable/ic_suqare"
                        android:drawablePadding="8dp"
                        android:textSize="13sp"
                       />



                    <TextView
                        android:id="@+id/tv_business_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/The_business_name"
                        android:textSize="13sp"
                        android:drawableStart="@drawable/ic_suqare"
                        android:drawablePadding="8dp"
              />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_second_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_active_sector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/active_sector"
                        android:drawableStart="@drawable/ic_suqare"
                        android:textSize="13sp"
                        android:drawablePadding="8dp"
                        />



                    <TextView
                        android:id="@+id/tv_work_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/work_field"
                        android:drawableStart="@drawable/ic_suqare"
                        android:drawablePadding="8dp"
                        android:textSize="13sp"
                        />



                    <TextView
                        android:id="@+id/tv_institution_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/institute_name_temporary"
                        android:textSize="13sp"
                        android:drawableStart="@drawable/ic_suqare"
                        android:drawablePadding="8dp"
                        />



                </LinearLayout>


            </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>


